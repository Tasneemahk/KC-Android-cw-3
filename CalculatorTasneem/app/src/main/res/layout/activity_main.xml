<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A0C0707"
    android:backgroundTint="#9A0E0A05"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/FirstNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/frst"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="41dp"
        android:background="#F1F0F0"
        android:backgroundTint="#FAF6F6"
        android:text="First Number"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/SecondNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scnd"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="42dp"
        android:background="#FAF8F8"
        android:text="Second Number"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="118dp"
        android:backgroundTint="#F47707"
        android:text="="
        android:textStyle="bold" />

    <Button
        android:id="@+id/Addition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="282dp"
        android:layout_marginBottom="276dp"
        android:backgroundTint="#070404"
        android:text="+" />

    <Button
        android:id="@+id/Multiplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="158dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="277dp"
        android:backgroundTint="#0C0909"
        android:text="x" />

    <Button
        android:id="@+id/Subtraction"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="282dp"
        android:layout_marginBottom="200dp"
        android:backgroundTint="#100909"
        android:text="-" />

    <Button
        android:id="@+id/Division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="158dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="198dp"
        android:backgroundTint="#090606"
        android:text="รท" />

    <EditText
        android:id="@+id/frst"
        android:layout_width="154dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="427dp"
        android:layout_toStartOf="@+id/scnd"
        android:ems="10"
        android:hint="Enter 1st Number"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/scnd"
        android:layout_width="163dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="429dp"
        android:ems="10"
        android:hint="Enter 2nd Number"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="113dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="151dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="633dp"
        android:text="Calculator"
        android:textColor="#F6780A"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Thankyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="65dp"
        android:text="Thank you!"
        android:textColor="#3CB811"
        android:textSize="24sp"
        android:textStyle="bold|italic" />
</RelativeLayout>